    <storeData>
        <name>$l10n_storeItem_hoermannGarageSmall</name>
        <functions>
            <function>$l10n_function_garage</function>
        </functions>
        <image>$data/placeables/rudolfHormann/garageSmall/store_garageSmall.dds</image>
        <price>106000</price>
        <dailyUpkeep>40</dailyUpkeep>
        <lifetime>1000</lifetime>
        <rotation>0</rotation>
        <brand>RUDOLFHOERMANN</brand>
        <species>PLACEABLE</species>
        <category>sheds</category>
        <canBeSold>true</canBeSold>
        <showInStore>true</showInStore>
        <vertexBufferMemoryUsage>1306880</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>241664</indexBufferMemoryUsage>
